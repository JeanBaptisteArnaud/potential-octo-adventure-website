<span class="s2">SET(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)</span>
<span class="s2">"</span> &gt;&gt; toolchainRaspPi.cmake

cmake -DCMAKE_TOOLCHAIN_FILE<span class="o">=</span>toolchainRaspPi.cmake .
